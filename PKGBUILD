# This is an example PKGBUILD file. Use this as a start to creating your own,
# and remove these comments. For more information, see 'man PKGBUILD'.
# NOTE: Please fill out the license field for your package! If it is unknown,
# then please put 'unknown'.
# Maintainer: Your Name <youremail@domain.com>
pkgname=locker
pkgver=0.1.0
pkgrel=1
pkgdesc="A simple application which locks the screen using i3lock with lock/unlock hooks."
arch=("x86_64")
url=""
license=('GPL')
groups=()
depends=()
makedepends=()
checkdepends=()
optdepends=()
provides=("locker")
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=("locker")
noextract=()
md5sums=("SKIP")
validpgpkeys=()

prepare() {
    echo "Preparing ..."
}

build() {
    echo "Building ..."
}

check() {
    echo "Checking ..."
}

package() {
    install -Dm755 locker "$pkgdir/usr/bin/locker"
}
